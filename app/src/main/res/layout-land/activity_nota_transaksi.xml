<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".transaksi.NotaTransaksiActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="20dp">
            <LinearLayout
                android:layout_width="420dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/laundryicons"/>
                <TextView
                    android:id="@+id/tvnamalaundry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wee Laundry"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tvnamacabangnota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Laweyan"
                    android:textSize="20sp"
                    android:gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvidtransaksinota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tvidtransaksinota"
                        android:layout_weight="1.35"/>
                    <TextView
                        android:id="@+id/tvisiidtransaksinota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID Transaksi"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:gravity="end"
                        android:layout_weight="1.35"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvtanggalnota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tvtanggalnota"
                        android:layout_weight="1.35"/>
                    <TextView
                        android:id="@+id/tvisitanggalnota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:gravity="end"
                        android:layout_weight="1.35"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvpelanggannota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tvpelanggannota"
                        android:layout_weight="1.35"/>
                    <TextView
                        android:id="@+id/tvisipelanggannota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pelanggan"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:gravity="end"
                        android:layout_weight="1.35"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvpegawainota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tvpegawainota"
                        android:layout_weight="1.35"/>
                    <TextView
                        android:id="@+id/tvisipegawainota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pegawai"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:gravity="end"
                        android:layout_weight="1.35"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#A29797"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvlayananutamanota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tvlayananutamanota"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:layout_weight="1.35"/>
                    <TextView
                        android:id="@+id/tvhargalayananutamanota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. Layanan Utama"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:gravity="end"
                        android:layout_weight="1.35"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="420dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvrinciantambahannota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tvrinciantambahannota"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="15dp"/>
                <androidx.core.widget.NestedScrollView
                    android:id="@+id/nestedscrollviewnota"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvlayananTambahannota"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </androidx.recyclerview.widget.RecyclerView>
                </androidx.core.widget.NestedScrollView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvsubtotaltambahannota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tvsubtotaltambahannota"
                        android:layout_weight="1.35"/>
                    <TextView
                        android:id="@+id/tvisisubtotaltambahannota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. Subtotal Tambahan"
                        android:gravity="end"
                        android:layout_weight="1.35"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvtotalbayarnota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tvtotalbayarnota"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:layout_weight="1.35"/>
                    <TextView
                        android:id="@+id/tvisitotalbayarnota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. Total Bayar"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:gravity="end"
                        android:layout_weight="1.35"/>
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <Button
                        android:id="@+id/btnkirimwhatsappnota"
                        android:layout_width="193dp"
                        android:layout_height="wrap_content"
                        android:text="@string/btnkirimwhatsappnota"
                        android:textColor="@color/white"
                        android:backgroundTint="#04871D"
                        app:layout_constraintEnd_toStartOf="@+id/btncetaknota"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <Button
                        android:id="@+id/btncetaknota"
                        android:layout_width="193dp"
                        android:layout_height="wrap_content"
                        android:text="@string/btncetaknota"
                        android:backgroundTint="#954C2E"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toEndOf="@+id/btnkirimwhatsappnota"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>