<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context=".tambahan.TambahTambahanActivity">

    <TextView
        android:id="@+id/tvjuduladdtambahan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambahan"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvnamaaddtambahan"/>
    <TextView
        android:id="@+id/tvnamaaddtambahan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvnamaaddtambahan"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvjuduladdtambahan"
        app:layout_constraintBottom_toTopOf="@+id/etNameaddtambahan"/>
    <EditText
        android:id="@+id/etNameaddtambahan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/radius"
        android:hint="@string/etNameaddtambahan"
        android:inputType="none"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvhargaaddtambahan"
        app:layout_constraintBottom_toTopOf="@+id/tvhargaaddtambahan"/>
    <TextView
        android:id="@+id/tvhargaaddtambahan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/harganotawa"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNameaddtambahan"
        app:layout_constraintBottom_toTopOf="@+id/ethargaddtambahan"/>
    <EditText
        android:id="@+id/ethargaddtambahan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/radius"
        android:hint="@string/ethargaaddlayanan"
        android:inputType="phone"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvhargaaddtambahan"
        app:layout_constraintBottom_toTopOf="@+id/buttonaddtambahan"/>

    <Button
        android:id="@+id/buttonaddtambahan"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="@string/simpan"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#254D70"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ethargaddtambahan"/>

</androidx.constraintlayout.widget.ConstraintLayout>