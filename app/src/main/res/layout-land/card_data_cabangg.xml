<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardcabang"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    android:layout_margin="5dp"
    android:layout_marginTop="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvcardidcabang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tvcardidcabang"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#131D4F"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>
        <TextView
            android:id="@+id/tvnamacabang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Cabang"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:paddingStart="10dp"
            android:paddingTop="10dp" />
        <TextView
            android:id="@+id/tvalamatcabang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvalamatcabang"
            android:paddingStart="10dp"
            android:paddingTop="5dp"/>
        <TextView
            android:id="@+id/tvteleponcabang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvteleponcabang"
            android:paddingStart="10dp"
            android:paddingTop="5dp"/>
        <TextView
            android:id="@+id/tvlayanancabang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvlayanancabang"
            android:paddingStart="10dp"
            android:paddingTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <Button
                android:id="@+id/btHubungicabang"
                android:layout_width="420dp"
                android:layout_height="wrap_content"
                android:text="@string/btHubungicabang"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="#254D70"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"/>
            <Button
                android:id="@+id/btLihatcabang"
                android:layout_width="420dp"
                android:layout_height="wrap_content"
                android:text="@string/btLihatcabang"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="#954C2E"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>