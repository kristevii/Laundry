<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvdetailpelangggan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tvdetailpelangggan"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#858484"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvidpelanggan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tvidpelanggan"
                        android:layout_weight="1.35"/>
                    <TextView
                        android:id="@+id/tvisiidpelanggan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID Pelanggan"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:layout_weight="1.35"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvnamapelanggan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tvnamapelanggan"
                        android:layout_weight="1.35"/>
                    <TextView
                        android:id="@+id/tvisinamapelanggan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Pelanggan"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:layout_weight="1.35"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#858484"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvalamatpelanggan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tvalamatpelanggan"
                        android:layout_weight="1.35"/>
                    <TextView
                        android:id="@+id/tvisialamatpelanggan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alamat"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:layout_weight="1.35"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvnohppelanggan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tvnohppelanggan"
                        android:layout_weight="1.35"/>
                    <TextView
                        android:id="@+id/tvisinohppelanggan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No HP"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:layout_weight="1.35"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#858484"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvcabangpelanggan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tvcabangpelanggan"
                        android:layout_weight="1.35"/>
                    <TextView
                        android:id="@+id/tvisicabangpelanggan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cabang"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:layout_weight="1.35"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvterdaftarpelanggan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tvterdaftarpelanggan"
                        android:layout_weight="1.35"/>
                    <TextView
                        android:id="@+id/tvisiterdaftarpelanggan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terdaftar"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:layout_weight="1.35"/>
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonsuntingpelanggan"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="3dp"
                        android:text="@string/buttonsuntingpelanggan"
                        app:icon="@drawable/edit"
                        app:tint="@null"
                        android:textColor="@color/white"
                        android:backgroundTint="#254D70"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/buttonhapuspelanggan"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonhapuspelanggan"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="3dp"
                        android:text="@string/buttonhapuspelanggan"
                        app:icon="@drawable/hapus"
                        app:tint="@null"
                        android:textColor="@color/white"
                        android:backgroundTint="#C84040"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/buttonsuntingpelanggan"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>