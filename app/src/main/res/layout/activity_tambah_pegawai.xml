<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context=".pegawai.TambahPegawaiActivity">

    <TextView
        android:id="@+id/tvjuduladdpegawai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tvjuduladdpegawai"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvjuduladdpegawai">

        <TextView
            android:id="@+id/tvnamaaddpegawai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tvnamaaddpegawai"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/etNameaddpegawai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/radius"
            android:hint="@string/etNameaddpegawai"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tvalamataddpegawai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tvalamatpegawai"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/etAlamataddpegawai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/radius"
            android:hint="@string/etAlamataddpegawai"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tvNoHpaddpegawai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tvNoHpaddpegawai"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/etNoHpaddpegawai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/radius"
            android:hint="@string/etNoHpaddpegawai"
            android:inputType="phone"
            android:maxLength="13"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tvCabangaddpegawai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tvcabangpegawai"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/etCabangaddpegawai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/radius"
            android:hint="@string/etCabangaddpegawai"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tvroleaddpegawai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tvroleregister"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp" />

        <Spinner
            android:id="@+id/sproleaddpegawai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:entries="@array/role"
            android:background="@drawable/radius"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tvpasswordaddpegawai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tvpasswordlogin"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp" />

        <Spinner
            android:id="@+id/sppasswordaddpegawai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:entries="@array/password"
            android:background="@drawable/radius"
            android:padding="10dp" />

        <Button
            android:id="@+id/buttonaddpegawai"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/buttonaddapegawai"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="#254D70"
            android:layout_marginTop="15dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>