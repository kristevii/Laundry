<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".transaksi.TransaksiiActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1transaksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nestedscrollview">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvdatapelanggantransaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvdatapelanggantransaksi"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tvnamapelanggantransaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="@string/tvnamapelanggantransaksi"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tvnohppelanggantransaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/tvnohppelanggantransaksi"
                android:textSize="15sp"/>
            <Button
                android:id="@+id/btnpilihpelanggantransaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="@string/btnpilihpelanggantransaksi"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="#254D70"/>
            <TextView
                android:id="@+id/tvdatalayanantransaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/tvdatalayanantransaksi"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tvnamalayanantransaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="@string/tvnamalayanantransaksi"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tvhargalayanantransaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/tvhargalayanantransaksi"
                android:textSize="15sp"/>
            <Button
                android:id="@+id/btnpilihlayanantransaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="@string/btnpilihlayanantransaksi"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="#254D70"/>
            <TextView
                android:id="@+id/tvlayanantambahantransaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/tvlayanantambahantransaksi"
                android:textSize="20sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedscrollview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/card1transaksi"
        app:layout_constraintBottom_toTopOf="@+id/card2transaksi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvlayananTambahan"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>
    </androidx.core.widget.NestedScrollView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card2transaksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/nestedscrollview"
        android:layout_marginTop="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="20dp">
            <Button
                android:id="@+id/btntambahantransaksi"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnprosestransaksi"
                android:text="@string/btntambahantransaksi"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="#131D4F" />
            <Button
                android:id="@+id/btnprosestransaksi"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btntambahantransaksi"
                android:text="@string/btnprosestransaksi"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="#954C2E" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>