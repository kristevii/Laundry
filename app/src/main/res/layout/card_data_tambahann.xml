<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardtambahan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    android:layout_margin="5dp"
    android:layout_marginTop="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvCardTambahanId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tvCardTambahanId"
            android:textStyle="bold"
            android:background="#75A0CA"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>
        <TextView
            android:id="@+id/tvnamatambahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Tambahan"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:paddingStart="10dp"
            android:paddingTop="10dp"/>
        <TextView
            android:id="@+id/tvhargatambahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvhargatambahan"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>