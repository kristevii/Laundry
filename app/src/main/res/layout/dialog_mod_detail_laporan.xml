<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:paddingBottom="30dp">
            <TextView
                android:id="@+id/tvjuduldetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvjuduldetail"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvidlaporandetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Laporan"
                    android:layout_weight="1.35"/>
                <TextView
                    android:id="@+id/tvisiidlaporandetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Laporan"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:gravity="end"
                    android:layout_weight="1.35"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvtanggaldetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tvtanggalnota"
                    android:layout_weight="1.35"/>
                <TextView
                    android:id="@+id/tvisitanggaldetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:gravity="end"
                    android:layout_weight="1.35"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvpelanggandetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tvpelanggannota"
                    android:layout_weight="1.35"/>
                <TextView
                    android:id="@+id/tvisipelanggandetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pelanggan"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:gravity="end"
                    android:layout_weight="1.35"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#A29797"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvlayananutamadetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tvlayananutamanota"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:layout_weight="1.35"/>
                <TextView
                    android:id="@+id/tvhargalayananutamadetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. Layanan Utama"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:gravity="end"
                    android:layout_weight="1.35"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#A29797"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"/>
            <TextView
                android:id="@+id/tvrinciantambahandetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvrinciantambahannota"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:paddingTop="5dp"
                android:paddingStart="10dp"/>
            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedscrollviewdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvlayananTambahandetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/card_tambahan_konfirmasi_data">

                </androidx.recyclerview.widget.RecyclerView>
            </androidx.core.widget.NestedScrollView>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#A29797"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvsubtotaltambahandetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tvsubtotaltambahannota"
                    android:layout_weight="1.35"/>
                <TextView
                    android:id="@+id/tvisisubtotaltambahandetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. Subtotal Tambahan"
                    android:gravity="end"
                    android:layout_weight="1.35"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvtotalbayardetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tvtotalbayarnota"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:layout_weight="1.35"/>
                <TextView
                    android:id="@+id/tvisitotalbayardetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. Total Bayar"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:gravity="end"
                    android:layout_weight="1.35"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#A29797"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvmetodepaydetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Metode Pembayaran"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:layout_weight="1.35"/>
                <TextView
                    android:id="@+id/tvisimetodepaydetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Metode Pembayaran"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:gravity="end"
                    android:layout_weight="1.35"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvtglwaktuambildetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diambil pada"
                    android:layout_weight="1.35"/>
                <TextView
                    android:id="@+id/tvisitglwaktuambildetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal dan Waktu"
                    android:gravity="end"
                    android:layout_weight="1.35"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>