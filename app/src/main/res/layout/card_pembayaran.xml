<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardpembayaran"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    android:layout_margin="5dp"
    android:layout_marginTop="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/tvjudulbayar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih Pembayaran"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#6CACD3"
            android:paddingStart="20dp"/>
        <LinearLayout
            android:id="@+id/lineartunai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingStart="20dp"
            android:layout_marginBottom="5dp">
            <ImageView
                android:id="@+id/imgbayar1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/laporan_penjualan"/>
            <TextView
                android:id="@+id/tvbayar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TUNAI"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <View
            android:id="@+id/garis1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#A29797"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15dp" />
        <LinearLayout
            android:id="@+id/linearqris"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingStart="20dp"
            android:layout_marginBottom="5dp">
            <ImageView
                android:id="@+id/imgbayar2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/laporan_penjualan"/>
            <TextView
                android:id="@+id/tvbayar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QRIS"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <View
            android:id="@+id/garis2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#A29797"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp" />
        <LinearLayout
            android:id="@+id/lineartransfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingStart="20dp"
            android:layout_marginBottom="5dp">
            <ImageView
                android:id="@+id/imgbayar3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/laporan_penjualan"/>
            <TextView
                android:id="@+id/tvbayar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transfer"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <View
            android:id="@+id/garis3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#A29797"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp" />
        <LinearLayout
            android:id="@+id/lineardebit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingStart="20dp"
            android:layout_marginBottom="5dp">
            <ImageView
                android:id="@+id/imgbayar4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/laporan_penjualan"/>
            <TextView
                android:id="@+id/tvbayar4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEBIT"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <View
            android:id="@+id/garis4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#A29797"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp" />
        <LinearLayout
            android:id="@+id/linearcredit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingStart="20dp"
            android:layout_marginBottom="5dp">
            <ImageView
                android:id="@+id/imgbayar5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/laporan_penjualan"/>
            <TextView
                android:id="@+id/tvbayar5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CREDIT"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>