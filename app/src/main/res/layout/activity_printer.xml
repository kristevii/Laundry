<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context=".printer.PrinterActivity">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mengelola Nota Print"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/btbatalprint"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="Batal"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="#6C81CE"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@+id/btcetakprint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/btcetakprint"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:text="Cetak"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="#E282E7"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toEndOf="@+id/btbatalprint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>