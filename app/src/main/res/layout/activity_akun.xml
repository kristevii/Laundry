<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".akun.AkunActivity"
    android:layout_margin="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civFoto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/akun2"
        tools:ignore="MissingClass"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvjabatan"/>
        <TextView
            android:id="@+id/tvjabatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Administrator"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#4C7EBD"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/civFoto"/>
        <TextView
            android:id="@+id/tvnama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We Laundry"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvjabatan"/>
        <TextView
            android:id="@+id/tvalamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jalan Candrakusuma Surakarta, Jawa Tengah"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/tvnama"/>
        <TextView
            android:id="@+id/tvtelepon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telepon : 0813 XXXX XXXX"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/tvalamat"/>

</androidx.constraintlayout.widget.ConstraintLayout>